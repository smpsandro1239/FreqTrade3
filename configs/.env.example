# === CONFIGURAÇÕES DE AMBIENTE - FREQTRADE3 ===
# Copie este arquivo para .env e configure suas variáveis

# === INFORMAÇÕES IMPORTANTES ===
# 1. NUNCA commit o arquivo .env no git
# 2. Gere chaves únicas para cada instalação
# 3. Mantenha backups seguros de suas chaves
# 4. Teste sempre em modo dry-run primeiro

# === BINANCE API (OBRIGATÓRIO PARA TRADING REAL) ===
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# === CONFIGURAÇÕES DE SEGURANÇA ===
# Chave de 32+ caracteres para criptografia
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Chave secreta para webhooks
WEBHOOK_SECRET=super_secret_webhook_key_123

# Nível de segurança: low, medium, high
SECURITY_LEVEL=high

# === CONFIGURAÇÕES DE TRADING ===
# Máximo por trade (% do saldo)
MAX_TRADE_AMOUNT=0.1

# Stop loss global (%)
STOP_LOSS_GLOBAL=-0.05

# Limite de perda diária (%)
DAILY_LOSS_LIMIT=0.02

# Ativar parada de emergência
EMERGENCY_STOP_ENABLED=true

# === TELEGRAM (OPCIONAL) ===
# Token do bot do Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ID do chat para receber alertas
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Ativar notificações Telegram
TELEGRAM_ENABLED=false

# === EMAIL (OPCIONAL) ===
# Servidor SMTP
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Email para receber alertas
ALERT_EMAIL=your_email@gmail.com

# === DISCORD (OPCIONAL) ===
# Webhook do Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here

# === SLACK (OPCIONAL) ===
# Token do bot Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_CHANNEL=#trading-alerts

# === PUSHBULLET (OPCIONAL) ===
# Token do Pushbullet
PUSHBULLET_ACCESS_TOKEN=your_pushbullet_token_here

# === CONFIGURAÇÕES DE SERVIDOR ===
# Porta da interface web
WEB_PORT=8081

# Host para binding
WEB_HOST=127.0.0.1

# === SSL/HTTPS (PRODUÇÃO) ===
# Caminho do certificado SSL
SSL_CERT_PATH=/path/to/cert.pem

# Caminho da chave SSL
SSL_KEY_PATH=/path/to/key.pem

# Forçar HTTPS
FORCE_HTTPS=false

# === BANCO DE DADOS ===
# Caminho do banco SQLite
DATABASE_PATH=./data/freqtrade.db

# === LOGS ===
# Nível de logging: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Diretório de logs
LOG_DIR=./logs

# === BACKUP ===
# Intervalo de backup (horas)
BACKUP_INTERVAL=24

# Retenção de backups (dias)
BACKUP_RETENTION_DAYS=30

# === API KEYS ADICIONAIS ===
# Exemplo para outras exchanges (futuro)
# COINBASE_API_KEY=your_coinbase_key
# COINBASE_API_SECRET=your_coinbase_secret
# KRAKEN_API_KEY=your_kraken_key
# KRAKEN_API_SECRET=your_kraken_secret

# === CONFIGURAÇÕES DE PERFORMANCE ===
# Pool de conexões do banco
DB_POOL_SIZE=10

# Timeout para requests (segundos)
REQUEST_TIMEOUT=30

# Cache de dados (segundos)
CACHE_DURATION=30

# === DESENVOLVIMENTO ===
# Ativar modo debug
DEBUG=false

# Ambiente: development, production
ENVIRONMENT=production

# === WEBSOCKET ===
# Porta para WebSocket
SOCKETIO_PORT=8082

# === MONITORAMENTO ===
# Ativar métricas Prometheus
PROMETHEUS_ENABLED=false

# Porta das métricas
PROMETHEUS_PORT=9090

# === FRONTEND ===
# URL base da aplicação
BASE_URL=http://localhost:8081

# === ENCODING ===
# Encoding de arquivos
FILE_ENCODING=utf-8

# === TIMEZONE ===
# Fuso horário principal
TIMEZONE=UTC

# === COMPRESSÃO ===
# Ativar compressão gzip
ENABLE_COMPRESSION=true

# === RATE LIMITING ===
# Requests por minuto
RATE_LIMIT_PER_MINUTE=120

# === SESSÃO ===
# Tempo de vida da sessão (horas)
SESSION_TIMEOUT=24

# === CORS ===
# Origins permitidos para CORS
CORS_ORIGINS=http://localhost:8081,https://yourdomain.com

# === WEBHOOKS PERSONALIZADOS ===
# URLs para webhooks de trades
TRADE_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/trade_webhook
# ALERT_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/alert_webhook

# === BACKTESTING ===
# Diretório de resultados de backtest
BACKTEST_DIR=./backtest_results

# === ESTRATÉGIAS ===
# Diretório de estratégias
STRATEGIES_DIR=./user_data/strategies

# === DADOS ===
# Diretório de dados históricos
DATA_DIR=./data

# === REPORTS ===
# Diretório de relatórios
REPORTS_DIR=./reports

# === VISUALIZAÇÃO ===
# Tema padrão: light, dark
DEFAULT_THEME=light

# === INDICADORES ===
# Período padrão do RSI
DEFAULT_RSI_PERIOD=14

# Período padrão do MACD
DEFAULT_MACD_FAST=12
DEFAULT_MACD_SLOW=26
DEFAULT_MACD_SIGNAL=9

# Períodos padrão das EMAs
DEFAULT_EMA_FAST=12
DEFAULT_EMA_SLOW=26

# === NOTIFICAÇÕES ===
# Ativar alertas sonoros
SOUND_ALERTS=false

# Volume dos alertas (0-100)
SOUND_VOLUME=70

# === INTERFACE ===
# Idioma padrão: pt, en
DEFAULT_LANGUAGE=pt

# Moeda base
BASE_CURRENCY=USDC

# === EXPORT ===
# Ativar exportação de dados
EXPORT_ENABLED=true

# Formatos: csv, json, xlsx
EXPORT_FORMATS=csv,json

# === AUTENTICAÇÃO ===
# Sistema de login (futuro)
AUTH_ENABLED=false
JWT_SECRET=your_jwt_secret_key_here

# === CONTAS DEMO ===
# Saldo inicial para testes ($10,000)
INITIAL_BALANCE=10000

# === EXPERT MODE ===
# Ativar configurações avançadas
EXPERT_MODE=false

# === OBSERVAÇÕES ===
